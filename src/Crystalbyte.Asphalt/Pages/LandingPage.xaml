<phone:PhoneApplicationPage x:Class="Crystalbyte.Asphalt.Pages.LandingPage"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:contexts="clr-namespace:Crystalbyte.Asphalt.Contexts"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
                            xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
                            xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
                            xmlns:ui="clr-namespace:Crystalbyte.Asphalt.UI"
                            FontFamily="{StaticResource PhoneFontFamilyNormal}"
                            FontSize="{StaticResource PhoneFontSizeNormal}"
                            Foreground="{StaticResource PhoneForegroundBrush}"
                            Orientation="Portrait"
                            SupportedOrientations="Portrait"
                            d:DataContext="{d:DesignInstance Type=contexts:AppContext}"
                            shell:SystemTray.IsVisible="False"
                            mc:Ignorable="d">

    <!--  LayoutRoot is the root grid where all page content is placed  -->
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:TrackingJumpControl Grid.Row="0"
                                d:DataContext="{d:DesignInstance Type=contexts:LocationTracker}"
                                Visibility="{Binding IsTracking,
                                                     Converter={StaticResource BooleanToVisibilityConverter}}" />

        <!--
            LOCALIZATION NOTE:
            To localize the displayed strings copy their values to appropriately named
            keys in the app's neutral language resource file (AppResources.resx) then
            replace the hard-coded text value between the attributes' quotation marks
            with the binding clause whose path points to that string name.
            
            For example:
            
            Text="{Binding Path=LocalizedResources.ApplicationTitle, Source={StaticResource LocalizedStrings}}"
            
            This binding points to the template's string resource named "ApplicationTitle".
            
            Adding supported languages in the Project Properties tab will create a
            new resx file per language that can carry the translated values of your
            UI strings. The binding in these examples will cause the value of the
            attributes to be drawn from the .resx file that matches the
            CurrentUICulture of the app at run time.
        -->

        <!--  Panorama control  -->
        <phone:Panorama Title="asphalt" Grid.Row="1">

            <phone:Panorama.Background>
                <ImageBrush ImageSource="/Crystalbyte.Asphalt.App;component/Assets/Background.jpg" />
            </phone:Panorama.Background>

            <!--  Panorama item one  -->
            <phone:PanoramaItem Header="{Binding LocalizedResources.VehiclePanoramaPageHeaderText, Source={StaticResource LocalizedStrings}}">
                <!--  Single line list with text wrapping  -->
                <phone:LongListSelector x:Name="VehicleListSelector"
                                        Margin="0,0,-22,0"
                                        ItemsSource="{Binding Vehicles,
                                                              Mode=OneTime}"
                                        SelectionChanged="OnVehicleSelectionChanged">
                    <phone:LongListSelector.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,-6,0,12"
                                  d:DataContext="{d:DesignInstance Type=contexts:Vehicle}"
                                  toolkit:TiltEffect.IsTiltEnabled="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0"
                                       Width="150"
                                       Height="150"
                                       Margin="12,0,12,0"
                                       Source="{Binding Image}"
                                       Stretch="UniformToFill" />
                                <StackPanel Grid.Column="1">
                                    <TextBlock FontSize="{StaticResource PhoneFontSizeExtraLarge}"
                                               Style="{StaticResource PhoneTextExtraLargeStyle}"
                                               Text="{Binding LicencePlate}"
                                               TextWrapping="Wrap" />
                                    <TextBlock FontSize="{StaticResource PhoneFontSizeSmall}"
                                               Style="{StaticResource PhoneTextSmallStyle}"
                                               Text="{Binding Notes}"
                                               TextWrapping="Wrap" />
                                </StackPanel>
                                <Rectangle Grid.Column="0"
                                           Grid.ColumnSpan="2"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch"
                                           Fill="Transparent"
                                           Stroke="Transparent">
                                    <toolkit:ContextMenuService.ContextMenu>
                                        <toolkit:ContextMenu>
                                            <toolkit:MenuItem Click="OnDeleteMenuItemClicked" Header="{Binding LocalizedResources.DeleteMenuHeader, Source={StaticResource LocalizedStrings}}" />
                                        </toolkit:ContextMenu>
                                    </toolkit:ContextMenuService.ContextMenu>
                                </Rectangle>
                            </Grid>
                        </DataTemplate>
                    </phone:LongListSelector.ItemTemplate>
                </phone:LongListSelector>
            </phone:PanoramaItem>

            <phone:PanoramaItem Header="{Binding LocalizedResources.ToursPanoramaPageHeaderText, Source={StaticResource LocalizedStrings}}">
                <!--  Single line list with text wrapping  -->
                <phone:LongListSelector Margin="0,0,-22,0"
                                        IsGroupingEnabled="True"
                                        ItemsSource="{Binding GroupedHistory,
                                                              Mode=OneWay}">
                    <phone:LongListSelector.JumpListStyle>
                        <Style TargetType="phone:LongListSelector">
                            <Setter Property="Margin" Value="12,12,0,0" />
                            <Setter Property="ItemTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <Border Width="470"
                                                Height="70"
                                                Margin="6"
                                                Background="{StaticResource PhoneAccentBrush}">
                                            <TextBlock VerticalAlignment="Bottom"
                                                       FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                                       FontSize="28"
                                                       Padding="2"
                                                       Text="{Binding Key}" />
                                        </Border>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>

                    </phone:LongListSelector.JumpListStyle>
                    <phone:LongListSelector.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,-6,0,12"
                                  d:DataContext="{d:DesignInstance Type=contexts:Tour}"
                                  toolkit:TiltEffect.IsTiltEnabled="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0"
                                       Width="150"
                                       Height="150"
                                       Margin="12,0,12,0"
                                       Stretch="UniformToFill" />
                                <StackPanel Grid.Column="1">
                                    <TextBlock FontSize="{StaticResource PhoneFontSizeExtraLarge}"
                                               Style="{StaticResource PhoneTextExtraLargeStyle}"
                                               Text="{Binding Destination}"
                                               TextWrapping="Wrap" />
                                    <TextBlock FontSize="{StaticResource PhoneFontSizeSmall}"
                                               Style="{StaticResource PhoneTextSmallStyle}"
                                               Text="{Binding Reason}"
                                               TextWrapping="Wrap" />
                                    <TextBlock FontSize="{StaticResource PhoneFontSizeSmall}"
                                               Style="{StaticResource PhoneTextSmallStyle}"
                                               Text="{Binding StartTime,
                                                              StringFormat=s}"
                                               TextWrapping="Wrap" />
                                </StackPanel>
                                <Rectangle Grid.Column="0"
                                           Grid.ColumnSpan="2"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch"
                                           Fill="Transparent"
                                           Stroke="Transparent">
                                    <toolkit:ContextMenuService.ContextMenu>
                                        <toolkit:ContextMenu>
                                            <toolkit:MenuItem Click="OnDeleteMenuItemClicked" Header="{Binding LocalizedResources.DeleteMenuHeader, Source={StaticResource LocalizedStrings}}" />
                                        </toolkit:ContextMenu>
                                    </toolkit:ContextMenuService.ContextMenu>
                                </Rectangle>

                            </Grid>
                        </DataTemplate>
                    </phone:LongListSelector.ItemTemplate>
                </phone:LongListSelector>
            </phone:PanoramaItem>

        </phone:Panorama>

        <!--
            Uncomment to see an alignment grid to help ensure your controls are
            aligned on common boundaries.  The image has a top margin of -32px to
            account for the System Tray. Set this to 0 (or remove the margin altogether)
            if the System Tray is hidden.
            
            Before shipping remove this XAML and the image itself.
        -->
        <!--
            <Image Grid.Row="0"
            Grid.RowSpan="2"
            Width="480"
            Height="800"
            Margin="0"
            VerticalAlignment="Top"
            IsHitTestVisible="False"
            Source="/Assets/AlignmentGrid.png" />
        -->

    </Grid>
    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar />
    </phone:PhoneApplicationPage.ApplicationBar>

</phone:PhoneApplicationPage>